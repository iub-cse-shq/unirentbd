  <script>
  var post ={ houseName:"",rentCost:0, address:"",city:"", zip:0,floor:0, room:0,photp:"",email:"",phoneNumber:"",fullName:""};
   
      $("#fullname").change(function(event){
      post.fullName=$("#fullname").val();
    });
    
     $("#email").change(function(event){
      post.email=$("#email").val();
    });
    
     $("#phonenum").change(function(event){
      post.PhoneNumber=$("#phonenum").val();
    });
     $("#house").change(function(event){
      post.houseName=$("#house").val();
    });
    $("#rent").change(function(event){
      post.rentCost=$("#rent").val();
    }); 
    
    $("#pInputAddress").change(function(event){
      post.address=$("#pInputAddress").val();
    });
    $("#pInputCity").change(function(event){
      post.city=$("#pInputCity").val();
    });
     $("#PInputZip").change(function(event){
      post.zip=$("#PInputZip").val();
    });
    
    $("#floor").change(function(event){
      post.floor=$("#floor").val();
    });
    $("#room").change(function(event){
      post.room=$("#room").val();
    });
    $("#pPhoto").change(function(event){
      post.photo=$("#pPhoto").val();
    });
    
    $("#pBtnsubmit").click(function(event){
      $.ajax({
        method: 'POST',
        url: "/api/posts",
        data: post
      }).done(function(response){
        alert("Post successfully done !");
        console.log(response);
        window.location.replace('/');
      }).fail(function(response){
        console.log(response);
        alert("Something Wrong! Please Try again.")
        $("#error").text("Please Fill The Form correctly ! Try again.");
      });
    });
  </script>
  
