  <!DOCTYPE html5>
   <html lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Login!</title>
     
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="icon" type="image/png" href="img/icon.png" />
    <!-- General META -->
    
    
    <link rel="stylesheet" href="/css/style2.css" crossorigin="anonymous">
    <script src="/js/js.js"></script>
  </head>
  
  
  <body>
    
    <div class="container">
      
	<div id="login-box">
	 <nav class="navbar navbar-toggleable-md navbar-light bg-faded fixed-top">
      <div class="container">
          <a class="navbar-brand" href="/index">UniRent BD</a>
          <a class="navbar-brand" href="/index">Home </a>

      </div>

  </nav>
	  
		<div class="logo">
			<img src="/images/Login.png" class="img img-responsive img-circle center-block"/>
			<h1 class="logo-caption"><span class="tweak">L</span>ogin</h1>
		</div><!-- /.logo -->
		<div class="controls">
		  
      <div id="error"></div>
			<input id="email" type="text" name="username" placeholder="Email" class="form-control" />
			<input id="password" type="password" name="username" placeholder="Password" class="form-control" />
			<button id="submit" type="button" class="btn btn-default btn-block btn-custom ">Login</button>
			<a id="signupbtn" type="button" href="/signup" class="btn btn-default btn-block btn-success">Sign Up</a>
			
		</div><!-- /.controls -->
	</div><!-- /#login-box -->
</div><!-- /.container -->
<div id="particles-js"></div>


    
  </body>
  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  
  
  <script>
  var user = {};
    $("#email").change(function(event){
      user.email=$("#email").val();
    });
    $("#password").change(function(event){
      user.password=$("#password").val();
    });
    $("#submit").click(function(event){
      $.ajax({
        method: 'POST',
        url: "/auth/signin",
        data: user
      }).done(function(response){
        console.log(response);
        window.location.replace('/');
      }).fail(function(response){
        console.log(response);
        $("#error").text("Something went wrong! Try again.");
      });
    });
  </script>
  
  
</html>
